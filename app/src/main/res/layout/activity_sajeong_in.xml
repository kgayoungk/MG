<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SajeongIn">

    <!-- 사정전 내부 배경 -->
    <ImageView
        android:id="@+id/sajeong_in"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sajeong_in" />

    <!-- 묘종 -->
    <ImageView
        android:id="@+id/myojong1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:src="@drawable/myojong"
        android:layout_gravity="bottom|center_horizontal" />

    <!-- 대화창 -->
    <TextView
        android:id="@+id/dialog1"
        android:layout_width="800dp"
        android:layout_height="120dp"
        android:background="@drawable/dialog_bg"
        android:gravity="top"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="20dp"
        android:paddingTop="30dp"
        android:paddingLeft="40dp"
        android:text="@string/myojong1"
        android:textSize="20sp"
        android:textColor="#000000"
        android:maxLines="2" />

    <!-- 대화창 다음 버튼 -->
    <!-- 버튼 터치시 대화 내용 넘기는 기능 추가 요망 -->
    <ImageButton
        android:id="@+id/dialog_next1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/dialog_next"
        android:background="#00ff0000"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="60dp" />

</FrameLayout>